<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <Format>cobertura</Format>
          <!-- Focus on our solution assemblies -->
          <Include>[KoalaWiki*]*</Include>
          <!-- Exclude tests, BCL, and third-party namespaces -->
          <Exclude>[KoalaWiki.IntegrationTests*]*</Exclude>
          <Exclude>[xunit.*]*</Exclude>
          <Exclude>[System.*]*</Exclude>
          <Exclude>[Microsoft.*]*</Exclude>
          <!-- Ignore generated/designer files -->
          <ExcludeByFile>**/*.g.cs</ExcludeByFile>
          <ExcludeByFile>**/*.g.i.cs</ExcludeByFile>
          <ExcludeByFile>**/*Designer.cs</ExcludeByFile>
          <ExcludeByFile>**/*.generated.cs</ExcludeByFile>
          <SkipAutoProps>true</SkipAutoProps>
          <UseSourceLink>true</UseSourceLink>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
